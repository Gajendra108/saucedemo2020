            <class name="com.saucelabs.example.DesktopTestRunner"/>
        </classes>
    </test>

    <test name="Chrome 74.0 on macOS in the US DC">
        <parameter name="browser" value="CHROME"/>
        <parameter name="version" value="74.0"/>
        <parameter name="platformName" value="macOS 10.14"/>
        <parameter name="dataCenter" value="US"/>
        <parameter name="capturePerformance" value="true"/>
        <classes>
            <class name="com.saucelabs.example.DesktopTestRunner"/>
        </classes>
    </test>

